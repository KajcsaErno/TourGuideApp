<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linear_layout">

    <ImageView
        android:id="@+id/image_view"
        style="@style/list_image"
        android:src="@drawable/bv1" />

    <LinearLayout
        android:id="@+id/text_container"
        style="@style/linear_layout_list">

        <TextView
            android:id="@+id/name"
            style="@style/list_title"
            tools:text="Place Holder Name" />

        <TextView
            android:id="@+id/phone"
            style="@style/list_phone_number"
            tools:text="+40 123 456 7890" />


        <TextView
            android:id="@+id/website"
            style="@style/list_website"
            tools:text="www.placeholder.com" />

        <TextView
            android:id="@+id/address"
            style="@style/list_adress"
            tools:text="Address 150, Placeholder" />
    </LinearLayout>

</LinearLayout>
